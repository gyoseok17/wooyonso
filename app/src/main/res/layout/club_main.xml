<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            //동아리1
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/ibClub1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/jeju13"
                    android:layout_margin="10dp"
                    android:visibility="visible"/>
                <ImageButton
                    android:id="@+id/ibClubDetail1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/mov13"
                    android:layout_margin="10dp"
                    android:visibility="gone"/>
            </LinearLayout>
            //동아리2
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/ibClub2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/mainpicture"
                    android:layout_margin="10dp"
                    android:visibility="visible"/>
                <ImageButton
                    android:id="@+id/ibClubDetail2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/mov14"
                    android:layout_margin="10dp"
                    android:visibility="gone"/>
            </LinearLayout>
            //동아리3
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/ibClub3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/mascote"
                    android:layout_margin="10dp"/>
                <ImageButton
                    android:id="@+id/ibClubDetail3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/mov15"
                    android:layout_margin="10dp"
                    android:visibility="gone"/>
        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>