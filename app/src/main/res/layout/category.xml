<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/main_menu"/>
    <ImageButton
        android:id="@+id/ibCate1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/ibCate2"
        android:layout_margin="10dp"
        android:src="@drawable/jeju13"
        android:layout_centerHorizontal="true"/>
    <ImageButton
        android:id="@+id/ibCate2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@drawable/mascote"
        android:layout_centerHorizontal="true"/>
    <ImageButton
        android:id="@+id/ibCate3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/ibCate2"
        android:layout_margin="10dp"
        android:src="@drawable/mainpicture"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>